<strong><%= task.name %></strong>
<% if (task.description) { %>
  <p><em><%= task.description %></em></p>
<% } %>

<% if (task.fechaLimite) { 
  const fechaLimite = new Date(task.fechaLimite);
  const hoy = new Date();
  const diasRestantes = Math.ceil((fechaLimite - hoy) / (1000 * 60 * 60 * 24));
%>
  <p>
    <strong>Fecha lÃ­mite:</strong> 
    <%= fechaLimite.toLocaleDateString('es-ES') %> 
    <% if (fechaLimite < hoy) { %>
      <span style="color: red; font-weight: bold;">(Â¡Vencida!)</span>
    <% } else if (diasRestantes <= 7 && task.status === 'pendiente') { %>
      <span style="color: orange; font-weight: bold;">ğŸš¨ Queda <%= diasRestantes %> dÃ­a<%= diasRestantes === 1 ? '' : 's' %></span>
